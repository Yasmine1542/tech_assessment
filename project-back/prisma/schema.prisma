generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(uuid())
  name         String
  email        String       @unique
  password     String
  role         String       @default("user")
  savedImages  SavedImage[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model SavedImage {
  id          String   @id @default(uuid())
  name        String
  imagePath   String
  placedItems Json?
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Item {
  id          String   @id @default(uuid())
  name        String
  imagePath   String?
  imageMime   String?
  defaultSize Int      @default(32)
  category    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
